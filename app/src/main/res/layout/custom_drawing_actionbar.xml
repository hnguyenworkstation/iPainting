<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">

    <ImageView
        android:layout_marginStart="10dp"
        android:id="@+id/logo"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/tabbar_icon_size"
        android:layout_height="@dimen/tabbar_icon_size"
        android:src="@drawable/vector_brush"/>

    <TextView
        android:id="@+id/action_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/logo"
        android:ellipsize="end"
        android:textSize="22sp"
        android:fontFamily="@font/roboto_bold"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/text_dark_color" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <ImageButton
            android:contentDescription="@string/image_btn_description"
            android:layout_width="@dimen/icon_button_size"
            android:layout_height="@dimen/icon_button_size"
            android:layout_margin="4dp"
            android:background="@null"
            android:id="@+id/pen_action_btn"
            android:src="@drawable/ic_pencil"/>

        <ImageButton
            android:contentDescription="@string/image_btn_description"
            android:layout_width="@dimen/icon_button_size"
            android:layout_height="@dimen/icon_button_size"
            android:layout_margin="4dp"
            android:background="@null"
            android:id="@+id/eraser_action_btn"
            android:src="@drawable/ic_eraser"/>

        <ImageButton
            android:contentDescription="@string/image_btn_description"
            android:layout_width="@dimen/icon_button_size"
            android:layout_height="@dimen/icon_button_size"
            android:layout_margin="4dp"
            android:background="@null"
            android:id="@+id/more_action_btn"
            android:src="@drawable/ic_more_vert"/>
    </LinearLayout>
</RelativeLayout>