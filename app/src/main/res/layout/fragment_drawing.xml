<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.hoocons.ipainting.ViewFragments.DrawingFragment">

    <com.app.hoocons.ipainting.CustomUI.PaintView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/custom_toolbar"
        android:id="@+id/paint_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:focusable="false"
        android:id="@+id/custom_toolbar"
        android:orientation="vertical">

        <include layout="@layout/custom_drawing_actionbar"/>

        <include layout="@layout/drawing_menu_buttons"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/scrim_view_topdown"/>
    </LinearLayout>
</RelativeLayout>
